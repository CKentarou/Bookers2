<div class="container px-5 m-5">
  <%= render 'books/validation', item: @book %>
  <div class="row">
    <div class="col-md-3">

      <%= render 'books/user_info', user: @user %>
      <%= render 'books/new_book', new_book: @book %>

    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
            <tr>
              <td class="td_image">
                <%= link_to user_path(book.user_id) do %>
                  <%= image_tag book.user.get_image(size: '100x100') %>
                <% end %>
              </td>
              <td>
                <%= link_to book.title, book_path(book.id), class: 'text-decoration-none text-primary' %>
              </td>
              <td><%= book.body %></td>
              <%= render 'books/favorite', book: book %>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>