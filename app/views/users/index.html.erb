<div class="containar px-5 m-5">
  <%= render 'books/validation', item: @book %>
  <div class="row">
    <div class="col-md-3">

      <%= render 'books/user_info', user: @user %>
      <%= render 'books/new_book', new_book: @book %>

    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Users</h2>
      <table class="table">
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td class="td_image">
              <%= link_to book_path(user.id) do %>
                  <%= image_tag user.get_image(size: '100x100') %>
              <% end %>
              </td>
              <td><%= user.name %></td>
              <td><%= link_to 'Show', user_path(user.id) %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>