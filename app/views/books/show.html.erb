<div class="containar px-5 m-5">
  <div class="row">
    <div class="col-md-3">

      <%= render 'user_info', user: @user %>
      <%= render 'new_book', new_book: @new_book %>
      
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
        </thead>       
        <tbody>
            <tr>
              <td class="td_image text-center">
                <%= link_to user_path(@book.user.id), class: 'text-decoration-none text-primary' do %>
                  <%= image_tag @book.user.get_image %>
                  <br>
                  <%= @book.user.name %>
                <% end %>
              </td>

              <td>
                <%= link_to 'book.body'.html_safe, book_path(@book.id), class: 'text-decoration-none text-primary' %>
              </td>
              <td><%= @book.body %></td>
              <% if current_user == @user %>
                <td><%= link_to 'Edit', edit_book_path(@book), class: 'btn btn-success' %></td>
                <td><%= link_to 'Destroy', book_path(@book), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
              <% end %>
            </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>