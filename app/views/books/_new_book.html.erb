<h2 class="mt-3">New Book</h2>
      <%= form_with model: new_book do |f| %>
        <div class="form-group">
          <%= f.label :title %>
          <%= f.text_field :title, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :body %>
          <%= f.text_field :body, class: 'form-control' %>
        </div>
        <%= f.submit 'Create Book', class: 'btn btn-primary mt-2' %>
      <% end %>