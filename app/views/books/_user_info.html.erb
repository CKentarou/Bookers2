  <h2>User info</h2>
    <%= image_tag user.get_image(size: '200x200') %>
    <table class="table">
      <tbody>
        <tr>
          <th>Name</th>
          <td><%= user.name %></td>
        </tr>
        <tr>
          <th>Introduction</th>
          <td><%= user.introduction %></td>
        </tr>
      </tbody>
    </table>

    <div class="row">
      <%= link_to '<i class="fa-solid fa-user-gear"></i>'.html_safe, edit_user_path(@user), class: 'btn btn-outline-secondary' %>
    </div>