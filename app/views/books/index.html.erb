<div class="containar px-5 m-5">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
      <%= image_tag @user.get_image %>
      <table class="table">
        <tbody>
          <tr>
            <th>Name</th>
            <td><%= @user.name %></td>
          </tr>
          <tr>
            <th>Introduction</th>
            <td><%= @user.introduction %></td>
          </tr>
        </tbody>
      </table>

      <div class="row">
        <%= link_to '<i class="fa-solid fa-user-gear"></i>'.html_safe, edit_user_path(@user), class: 'btn btn-outline-secondary' %>
      </div>

      <h2 class="mt-3">New Book</h2>
      <%= form_with model: @book do |f| %>
        <div class="form-group">
          <%= f.label :title %>
          <%= f.text_field :title, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :body %>
          <%= f.text_field :body, class: 'form-control' %>
        </div>
        <%= f.submit 'Create Book', class: 'btn btn-primary mt-2' %>
      <% end %>


    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
        </thead>       
        <tbody>
          <% @books.each do |book| %>
            <tr>
              <td class="td_image"><%= image_tag book.user.get_image %></td>
              <td>
                <%= link_to 'book.body'.html_safe, book_path(book.id), class: 'text-decoration-none text-primary' %>
              </td>
              <td><%= book.body %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>