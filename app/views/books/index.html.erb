<div class="containar px-5 m-5">
  <div class="row">
    <div class="col-md-3">

      <%= render 'user_info', user: @user %>
      <%= render 'new_book', new_book: @book %>

    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
        </thead>       
        <tbody>
          <% @books.each do |book| %>
            <tr>
              <td class="td_image"><%= image_tag book.user.get_image %></td>
              <td>
                <%= link_to book.title, book_path(book.id), class: 'text-decoration-none text-primary' %>
              </td>
              <td><%= book.body %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>